* Jenkins Doc: https://jenkins.io/doc/
*
**/

openshift.withCluster() {
  env.NAMESPACE = "appmod-twas"
  env.APP_NAME = "${JOB_NAME}".replaceAll(/-build.*/, '')
  echo "Starting Pipeline for ${APP_NAME}..."
}

pipeline {
    agent {
      label "maven"
    }
    stages {
        stage("Deploy objects") {
                  steps {
                    script {
                      openshift.withCluster() {
                        openshift.withProject() {
                          files = findFiles(glob: 'Deployment/openshift/yaml/**/*.yaml')

                          for (File f : files) {
                          def objects = openshift.apply( readFile(f.path), "--namespace=appmod-twas" )
                          println "Created objects from path ${f.path}:\n ${objects.names()}"
                          }
                        }
                      }
                    }
                  }
                }  
              }
            }
